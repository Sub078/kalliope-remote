<div class="col-sm-6 col-md-3">
  <div class="thumbnail">
    <img src="assets/images/synapse.jpg" alt="synapse">
    <div class="caption">
      <h3 class="ellipsis">{{synapse.name}}</h3>
      <p class="neurons"><span>Neurons</span>: todo</p>
      <p class="signals"><span>Signals</span>: todo</p>
      <p>
        {{#if synapse.launchable}}
          {{#bs-button type="primary" icon="glyphicon glyphicon-play" onClick=(action "launch_synapse" synapse)}} Launch {{/bs-button}}
        {{else}}
          {{#bs-button type="primary" icon="glyphicon glyphicon-play" onClick=(action "launch_synapse" synapse) disabled="disabled"}} Launch {{/bs-button}}
        {{/if}}
      </p>
    </div>
  </div>
</div>

